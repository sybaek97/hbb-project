<?xml version="1.0" encoding="utf-8"?>
<layout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".view.inventoryCheck.InventoryCheckActivity">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Row for SKU/Barcode input -->


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#DFDFDF"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/general_move_radio_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.appcompat.widget.AppCompatCheckBox
                                android:id="@+id/check_general_move"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:checked="false" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="일반 이동"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/stage_radio_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/detail_radio_btn">

                            <androidx.appcompat.widget.AppCompatCheckBox
                                android:id="@+id/check_stage"
                                android:checked="true"
                                android:layout_width="30dp"
                                android:layout_height="30dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="STAGE"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp">

                        <TextView
                            android:id="@+id/from_txt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:text="FROM 로케이션 ->"
                            android:textSize="15sp"
                            app:layout_constraintEnd_toStartOf="@id/to_txt"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <EditText
                            android:id="@+id/from_edit"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:background="@color/white"
                            app:layout_constraintEnd_toEndOf="@+id/from_txt"
                            app:layout_constraintStart_toStartOf="@+id/from_txt"
                            app:layout_constraintTop_toBottomOf="@+id/from_txt" />


                        <TextView
                            android:id="@+id/to_txt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="TO 로케이션"
                            android:textSize="15sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/from_txt"
                            app:layout_constraintTop_toTopOf="parent" />

                        <EditText
                            android:id="@+id/to_edit"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:background="@color/white"
                            app:layout_constraintEnd_toEndOf="@+id/to_txt"
                            app:layout_constraintStart_toStartOf="@+id/to_txt"
                            app:layout_constraintTop_toBottomOf="@+id/to_txt" />

                        <EditText
                            android:id="@+id/total_edit"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:background="@color/white"
                            android:hint="0"
                            android:textColorHint="#FF0000"
                            android:textSize="30sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/from_edit" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/select_all_move_confirm_btn"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginStart="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_background"
                            android:text="선택 전체 이동확정"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            app:layout_constraintBaseline_toBottomOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/total_edit"
                            app:layout_constraintTop_toTopOf="@+id/total_edit" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/stage_contain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="30dp"
                android:background="#BDD9F6"
                android:orientation="vertical"
                android:padding="10dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/stage_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STAGE"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/all_items_capacity_bulk_move_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/button_background"
                    android:padding="10dp"
                    android:text="전품목 가용량 일괄이동"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toTopOf="@+id/stage_body"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/stage_body"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#C6C6C6"
                    android:padding="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/all_items_capacity_bulk_move_btn">

                    <TextView
                        android:id="@+id/box_num_txt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:text="박스번호"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/stage_body" />

                    <EditText
                        android:id="@+id/box_num_edit"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/white"
                        app:layout_constraintStart_toStartOf="@+id/stage_body"
                        app:layout_constraintTop_toBottomOf="@+id/box_num_txt" />

                    <androidx.appcompat.widget.AppCompatSpinner
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:id="@+id/select_spinner"
                        android:layout_marginStart="20dp"
                        app:layout_constraintStart_toEndOf="@id/box_num_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"/>
                    <TextView
                        android:id="@+id/sku_txt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:text="SKU"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/box_num_edit" />

                    <EditText
                        android:id="@+id/sku_edit"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/white"
                        app:layout_constraintStart_toStartOf="@+id/stage_body"
                        app:layout_constraintTop_toBottomOf="@+id/sku_txt" />

                    <TextView
                        android:id="@+id/available_capacity_txt"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:text="가용량"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/available_capacity_edit"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/sku_edit" />

                    <EditText
                        android:id="@+id/available_capacity_edit"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/white"
                        android:hint="0"
                        android:textColorHint="@color/black"
                        app:layout_constraintBottom_toBottomOf="@+id/available_capacity_txt"
                        app:layout_constraintEnd_toEndOf="@id/sku_edit"
                        app:layout_constraintStart_toEndOf="@+id/available_capacity_txt"
                        app:layout_constraintTop_toTopOf="@+id/available_capacity_txt" />

                    <TextView
                        android:id="@+id/add_txt"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:text="추가"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/add_edit"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/available_capacity_txt" />

                    <EditText
                        android:id="@+id/add_edit"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/white"
                        android:hint="0"
                        android:textColorHint="#FD0000"
                        app:layout_constraintBottom_toBottomOf="@+id/add_txt"
                        app:layout_constraintEnd_toEndOf="@id/sku_edit"
                        app:layout_constraintStart_toEndOf="@+id/add_txt"
                        app:layout_constraintTop_toTopOf="@+id/add_txt" />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="저 장"
            android:id="@+id/save_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/rounded_background"
            />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
